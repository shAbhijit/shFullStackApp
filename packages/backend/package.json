{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.ts",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "scripts/prepare-test-db.sh && jest --runInBand --detectOpenHandles --config ./test/jest-e2e.json",
    "db:reset": "prisma migrate reset",
    "db:reset:force": "prisma migrate reset --force",
    "db:migrate": "prisma migrate dev --preview-feature",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate dev --preview-feature",
    "db:deploy": "prisma migrate deploy --preview-feature",
    "db:studio": "prisma studio",
    "db:diff-model-db": "prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma",
    "db:status": "prisma migrate status",
    "db:script": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script",
    "db:new-migration": "prisma migrate dev --create-only"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "9.5.1",
    "@fastify/static": "8.1.1",
    "@nestjs/axios": "4.0.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "4.0.1",
    "@nestjs/core": "^11.1.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "11.0.1",
    "@nestjs/platform-fastify": "^11.0.11",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@prisma/client": "^5.20.0",
    "@testing-library/user-event": "^14.6.1",
    "axios": "1.8.2",
    "axios-retry": "4.5.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.2",
    "dd-trace": "5.41.0",
    "nestjs-pino": "^4.4.0",
    "neverthrow": "8.2.0",
    "pino-http": "10.4.0",
    "pino-pretty": "13.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.2",
    "web-vitals": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "^11.1.0",
    "@swc/cli": "0.6.0",
    "@swc/core": "^1.11.24",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/supertest": "6.0.2",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitlint": "17.6.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-regexp": "2.7.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "fastify": "^5.3.2",
    "globals": "16.0.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jest-mock-extended": "4.0.0-beta1",
    "pino-pretty": "13.0.0",
    "prettier": "^3.5.3",
    "prisma": "^5.20.0",
    "source-map-support": "0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
