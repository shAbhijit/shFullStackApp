    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/platform-fastify": "10.4.6",
    "@nestjs/swagger": "7.4.2",
    "@nestjs/terminus": "10.2.3",
    "@prisma/client": "5.20.0",
