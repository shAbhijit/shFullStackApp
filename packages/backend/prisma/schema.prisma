generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  genre       String
  summary     String
  publishedAt Int
  coverImage  String?
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
}
